{% extends "base.jinja2" %}

{% block content_header %}
<div class="header">
    <div id="logos">
        <img class="logo" src="{{ static_url("logo.png") }}" alt="Zoe logo"/>
    </div>
    <div id="nav">
        <div class="nav-item">
            <a href="{{ reverse_url("home_user") }}">Home</a>
        </div>
        <div class="nav-item">
            <a href="{{ reverse_url("zappshop") }}">ZApp shop</a>
        </div>
        <div class="nav-item">
            <a href="{{ reverse_url("execution_list") }}">Executions</a>
        </div>
        {% if user.role.can_see_status %}
        <div class="nav-item">
            <a href="{{ reverse_url("status") }}">Status</a>
        </div>
        {% endif %}
    </div>
    <div id="user_info">
        {{ user.username }} ({{ user.role.name }}) <a href="{{ reverse_url("logout") }}">logout</a>
    </div>
</div>
{% endblock %}

{% block content %}
    {{ super() }}
{% endblock %}
